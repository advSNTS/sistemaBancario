<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.javeriana.sistema.controller.VerCuentasController">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="tablaCuentas" prefWidth="500">
                <columns>
                    <TableColumn fx:id="colId" text="ID" />
                    <TableColumn fx:id="colTipo" text="Tipo de Cuenta" />
                    <TableColumn fx:id="colSaldo" text="Saldo" />
                </columns>
            </TableView>

            <Button fx:id="btnOperar" text="Operar" onAction="#abrirOperacionCuenta" disable="true" />
            <Button text="Simular Inversiones" onAction="#abrirSimularInversiones" />
        </VBox>
    </center>

</BorderPane>
