<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.javeriana.sistema.controller.ConfigurarLimiteController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">

    <Label text="Configurar Límite de Alerta"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="comboCuentas" prefWidth="250"
              promptText="Seleccione una cuenta"/>

    <TextField fx:id="txtLimite" promptText="Nuevo límite de alerta" prefWidth="250"/>

    <Button text="Guardar Límite"
            onAction="#guardarLimite"
            style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>

    <Label fx:id="lblEstado" text="" style="-fx-text-fill: green;"/>
</VBox>
