<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.javeriana.sistema.controller.DepositarRetirarController"
            style="-fx-background-color: #f5f5f5;">

    <center>
        <VBox alignment="CENTER" spacing="15" padding="20">
            <Label text="Tipo de Cuenta:" style="-fx-font-size: 16px;"/>
            <Label fx:id="lblTipoCuenta" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label text="Saldo Actual:" style="-fx-font-size: 16px;"/>
            <Label fx:id="lblSaldoActual" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="txtMonto" promptText="Ingrese monto" maxWidth="200"/>

            <HBox alignment="CENTER" spacing="10">
                <Button text="Depositar" onAction="#depositar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Retirar" onAction="#retirar" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
