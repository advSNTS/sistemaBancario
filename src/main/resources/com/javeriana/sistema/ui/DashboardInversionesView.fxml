<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javeriana.sistema.controller.DashboardInversionesController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #F3F7FA; -fx-padding: 30;">

    <Text text="Gestión de Inversiones"
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #0D47A1;" />

    <Button text="Abrir Inversión" onAction="#abrirAbrirInversion"
            style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30;" />

    <Button text="Simular Finalización de Inversiones" onAction="#abrirSimularInversion"
            style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30;" />

    <Button text="Volver" onAction="#volver"
            style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 30;" />
</VBox>
