<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.javeriana.sistema.controller.PagarDeudaController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Pagar Deuda de Tarjeta" style="-fx-font-size: 18px;" />

    <Label fx:id="lblTarjetaInfo" text="Tarjeta: " />
    <ComboBox fx:id="comboCuentaPago" promptText="Cuenta para pagar" prefWidth="200"/>
    <TextField fx:id="txtMonto" promptText="Monto a pagar" prefWidth="200"/>
    <Button text="Confirmar Pago" onAction="#confirmarPago"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>
