<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javeriana.sistema.controller.SolicitarPrestamoController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #e3f2fd;">

    <Label text="Solicitar Préstamo" style="-fx-font-size: 20px;" />

    <TextField fx:id="txtMonto" promptText="Monto del préstamo" />
    <TextField fx:id="txtTasaInteres" promptText="Tasa de interés (%)" />
    <TextField fx:id="txtPlazoMeses" promptText="Plazo en meses" />

    <Button fx:id="btnSolicitar" text="Solicitar" onAction="#solicitarPrestamo" />
</VBox>
