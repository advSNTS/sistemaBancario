<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javeriana.sistema.controller.DashboardController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #E3F2FD; -fx-padding: 30;">

    <Text text="¡Bienvenido al Sistema Bancario!"
          style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" />

    <Separator />

    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
        <Button text="Crear Nueva Cuenta Bancaria"
                onAction="#abrirCrearCuenta"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

        <Button text="Ver Mis Cuentas"
                onAction="#verCuentas"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

        <Button text="Ver Mis Préstamos"
                onAction="#verPrestamos"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

        <Button text="Solicitar Préstamo"
                onAction="#abrirSolicitarPrestamo"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

        <Button text="Transferir a Otro Usuario"
                onAction="#abrirTransferenciaPersonaPersona"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

        <Button text="Historial de Transferencias" onAction="#verHistorialTransferencias"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

    </VBox>

    <Separator />

    <Button fx:id="cerrarSesionButton" text="Cerrar Sesión"
            onAction="#cerrarSesion"
            style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-font-size: 16px;" />

</VBox>
