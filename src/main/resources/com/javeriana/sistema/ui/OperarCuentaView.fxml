<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.javeriana.sistema.controller.OperarCuentaController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label fx:id="labelTipoCuenta" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label fx:id="labelSaldoActual" style="-fx-font-size: 14px;" />

    <TextField fx:id="txtMonto" promptText="Ingrese el monto" />

    <Button text="Depositar" onAction="#depositar" maxWidth="150" />
    <Button text="Retirar" onAction="#retirar" maxWidth="150" />

</VBox>
