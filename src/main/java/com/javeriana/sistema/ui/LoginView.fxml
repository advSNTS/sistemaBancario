<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javeriana.sistema.controller.LoginController">

    <Label text="Sistema Bancario - Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtCorreo" promptText="Correo Electrónico" />
    <PasswordField fx:id="txtClave" promptText="Contraseña" />

    <Button text="Iniciar Sesión" fx:id="btnLogin" onAction="#handleLogin" />

</VBox>
